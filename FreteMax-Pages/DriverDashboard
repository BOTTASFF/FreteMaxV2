import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { 
  Truck, 
  Package, 
  DollarSign, 
  TrendingUp,
  MapPin,
  Clock,
  CheckCircle2,
  Star
} from "lucide-react";
import { format } from "date-fns";

export default function DriverDashboard() {
  const [user, setUser] = useState(null);

  useEffect(() => {
    const loadUser = async () => {
      const userData = await base44.auth.me();
      setUser(userData);
    };
    loadUser();
  }, []);

  const { data: myFreights = [], isLoading: loadingMy } = useQuery({
    queryKey: ['my-freights', user?.id],
    queryFn: () => base44.entities.Freight.filter({ driver_id: user?.id }, '-updated_date'),
    enabled: !!user,
    initialData: []
  });

  const { data: availableFreights = [], isLoading: loadingAvailable } = useQuery({
    queryKey: ['available-freights'],
    queryFn: () => base44.entities.Freight.filter({ status: 'available' }, '-created_date', 5),
    initialData: []
  });

  const stats = {
    inTransit: myFreights.filter(f => f.status === 'in_transit').length,
    completed: myFreights.filter(f => f.status === 'delivered').length,
    totalEarned: myFreights
      .filter(f => f.status === 'delivered')
      .reduce((sum, f) => sum + (f.freight_value || 0), 0),
    rating: user?.rating || 5
  };

  if (!user) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600" />
      </div>
    );
  }

  return (
    <div className="min-h-screen py-8 px-4 sm:px-6 lg:px-8">
      <div className="max-w-7xl mx-auto space-y-8">
        {/* Header */}
        <div>
          <h1 className="text-3xl font-bold text-slate-900">
            Olá, {user.full_name}!
          </h1>
          <p className="text-slate-600 mt-1">Bem-vindo ao seu painel de motorista</p>
        </div>

        {/* Stats Grid */}
        <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <Card className="bg-gradient-to-br from-purple-500 to-purple-600 text-white border-0 shadow-lg shadow-purple-500/30">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium opacity-90">Em Trânsito</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="flex items-center justify-between">
                <div className="text-3xl font-bold">{stats.inTransit}</div>
                <Truck className="w-8 h-8 opacity-80" />
              </div>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-shadow">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium text-slate-600">Concluídos</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="flex items-center justify-between">
                <div className="text-3xl font-bold text-green-600">{stats.completed}</div>
                <div className="p-2 bg-green-50 rounded-lg">
                  <CheckCircle2 className="w-6 h-6 text-green-600" />
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="bg-gradient-to-br from-green-500 to-green-600 text-white border-0 shadow-lg shadow-green-500/30">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium opacity-90">Total Ganho</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="flex items-center justify-between">
                <div className="text-2xl font-bold">
                  {new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(stats.totalEarned)}
                </div>
                <DollarSign className="w-8 h-8 opacity-80" />
              </div>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-shadow">
            <CardHeader className="pb-3">
              <CardTitle className="text-sm font-medium text-slate-600">Avaliação</CardTitle>
            </CardHeader>
            <CardContent>
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-2">
                  <span className="text-3xl font-bold text-yellow-600">{stats.rating.toFixed(1)}</span>
                  <Star className="w-6 h-6 text-yellow-500 fill-yellow-500" />
                </div>
                <div className="text-sm text-slate-500">{user.total_ratings || 0} avaliações</div>
              </div>
            </CardContent>
          </Card>
        </div>

        {/* Recent Freights & Available */}
        <div className="grid lg:grid-cols-2 gap-8">
          {/* My Recent Freights */}
          <Card className="shadow-lg">
            <CardHeader>
              <div className="flex justify-between items-center">
                <CardTitle>Meus Fretes Recentes</CardTitle>
                <Link to={createPageUrl("MyFreights")}>
                  <Button variant="outline" size="sm">Ver Todos</Button>
                </Link>
              </div>
            </CardHeader>
            <CardContent>
              {loadingMy ? (
                <div className="text-center py-8">
                  <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto" />
                </div>
              ) : myFreights.length === 0 ? (
                <div className="text-center py-8">
                  <Truck className="w-12 h-12 mx-auto text-slate-300 mb-3" />
                  <p className="text-slate-600">Nenhum frete aceito ainda</p>
                  <Link to={createPageUrl("AvailableFreights")}>
                    <Button className="mt-4 bg-blue-600 hover:bg-blue-700">
                      Ver Fretes Disponíveis
                    </Button>
                  </Link>
                </div>
              ) : (
                <div className="space-y-3">
                  {myFreights.slice(0, 3).map((freight) => (
                    <div key={freight.id} className="p-4 border rounded-lg hover:shadow-md transition-shadow">
                      <div className="flex items-start justify-between mb-2">
                        <h4 className="font-semibold text-slate-900">{freight.cargo_name}</h4>
                        <span className={`px-2 py-1 rounded-full text-xs font-medium ${
                          freight.status === 'in_transit' ? 'bg-purple-100 text-purple-700' :
                          freight.status === 'delivered' ? 'bg-green-100 text-green-700' :
                          'bg-yellow-100 text-yellow-700'
                        }`}>
                          {freight.status === 'in_transit' ? 'Em Trânsito' :
                           freight.status === 'delivered' ? 'Entregue' : 'Atribuído'}
                        </span>
                      </div>
                      <div className="text-sm text-slate-600 space-y-1">
                        <p className="flex items-center gap-2">
                          <MapPin className="w-4 h-4" />
                          {freight.pickup_location} → {freight.delivery_location}
                        </p>
                        <p className="flex items-center gap-2">
                          <DollarSign className="w-4 h-4" />
                          {new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(freight.freight_value)}
                        </p>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </CardContent>
          </Card>

          {/* Available Freights */}
          <Card className="shadow-lg">
            <CardHeader>
              <div className="flex justify-between items-center">
                <CardTitle>Fretes Disponíveis</CardTitle>
                <Link to={createPageUrl("AvailableFreights")}>
                  <Button variant="outline" size="sm">Ver Todos</Button>
                </Link>
              </div>
            </CardHeader>
            <CardContent>
              {loadingAvailable ? (
                <div className="text-center py-8">
                  <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto" />
                </div>
              ) : availableFreights.length === 0 ? (
                <div className="text-center py-8">
                  <Package className="w-12 h-12 mx-auto text-slate-300 mb-3" />
                  <p className="text-slate-600">Nenhum frete disponível no momento</p>
                </div>
              ) : (
                <div className="space-y-3">
                  {availableFreights.map((freight) => (
                    <div key={freight.id} className="p-4 border rounded-lg hover:shadow-md transition-shadow bg-blue-50/50 border-blue-100">
                      <div className="flex items-start justify-between mb-2">
                        <h4 className="font-semibold text-slate-900">{freight.cargo_name}</h4>
                        <div className="text-right">
                          <div className="text-lg font-bold text-green-600">
                            {new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(freight.freight_value)}
                          </div>
                        </div>
                      </div>
                      <div className="text-sm text-slate-600 space-y-1">
                        <p className="flex items-center gap-2">
                          <MapPin className="w-4 h-4" />
                          {freight.pickup_location} → {freight.delivery_location}
                        </p>
                        <p className="flex items-center gap-2">
                          <Clock className="w-4 h-4" />
                          Até {format(new Date(freight.pickup_deadline), 'dd/MM/yyyy')}
                        </p>
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </CardContent>
          </Card>
        </div>

        {/* Quick Actions */}
        <div className="grid md:grid-cols-3 gap-6">
          <Card className="hover:shadow-lg transition-shadow cursor-pointer bg-gradient-to-br from-blue-50 to-white">
            <Link to={createPageUrl("AvailableFreights")}>
              <CardContent className="p-6">
                <div className="flex items-center gap-4">
                  <div className="p-3 bg-blue-600 rounded-xl">
                    <Package className="w-6 h-6 text-white" />
                  </div>
                  <div>
                    <h3 className="font-semibold text-slate-900">Fretes Disponíveis</h3>
                    <p className="text-sm text-slate-600">Encontre novos fretes</p>
                  </div>
                </div>
              </CardContent>
            </Link>
          </Card>

          <Card className="hover:shadow-lg transition-shadow cursor-pointer bg-gradient-to-br from-purple-50 to-white">
            <Link to={createPageUrl("MyFreights")}>
              <CardContent className="p-6">
                <div className="flex items-center gap-4">
                  <div className="p-3 bg-purple-600 rounded-xl">
                    <Truck className="w-6 h-6 text-white" />
                  </div>
                  <div>
                    <h3 className="font-semibold text-slate-900">Meus Fretes</h3>
                    <p className="text-sm text-slate-600">Gerencie seus fretes</p>
                  </div>
                </div>
              </CardContent>
            </Link>
          </Card>

          <Card className="hover:shadow-lg transition-shadow cursor-pointer bg-gradient-to-br from-green-50 to-white">
            <CardContent className="p-6">
              <div className="flex items-center gap-4">
                <div className="p-3 bg-green-600 rounded-xl">
                  <TrendingUp className="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 className="font-semibold text-slate-900">Histórico</h3>
                  <p className="text-sm text-slate-600">Fretes concluídos</p>
                </div>
              </div>
            </CardContent>
          </Card>
        </div>
      </div>
    </div>
  );
}
