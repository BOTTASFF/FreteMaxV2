import React, { useState, useEffect } from "react";
import { Link, useLocation, useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { base44 } from "@/api/base44Client";
import { 
  Truck, 
  Building2, 
  LayoutDashboard, 
  Package, 
  MapPin, 
  Menu,
  X,
  LogOut,
  User,
  RefreshCw
} from "lucide-react";
import { Button } from "@/components/ui/button";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import { toast } from "sonner";

export default function Layout({ children, currentPageName }) {
  const location = useLocation();
  const navigate = useNavigate();
  const [user, setUser] = useState(null);
  const [mobileMenuOpen, setMobileMenuOpen] = useState(false);
  const [scrolled, setScrolled] = useState(false);
  const [switchingProfile, setSwitchingProfile] = useState(false);

  useEffect(() => {
    const loadUser = async () => {
      try {
        const userData = await base44.auth.me();
        setUser(userData);
      } catch (error) {
        setUser(null);
      }
    };
    loadUser();
  }, [location.pathname]);

  useEffect(() => {
    const handleScroll = () => {
      setScrolled(window.scrollY > 20);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  const handleLogout = async () => {
    try {
      await base44.auth.logout(createPageUrl("Home"));
    } catch (error) {
      window.location.href = createPageUrl("Home");
    }
  };

  const handleSwitchProfile = async () => {
    setSwitchingProfile(true);
    try {
      const newType = user.user_type === "company" ? "driver" : "company";
      await base44.auth.updateMe({ user_type: newType });
      
      toast.success(`Perfil alterado para ${newType === "company" ? "Empresa" : "Motorista"}`);
      
      // Reload user data
      const userData = await base44.auth.me();
      setUser(userData);
      
      // Navigate to appropriate dashboard
      if (newType === "company") {
        navigate(createPageUrl("CompanyDashboard"));
      } else {
        navigate(createPageUrl("DriverDashboard"));
      }
    } catch (error) {
      toast.error("Erro ao alternar perfil");
    }
    setSwitchingProfile(false);
  };

  const isHomePage = location.pathname === createPageUrl("Home");

  const companyNavItems = [
    { title: "Dashboard", url: createPageUrl("CompanyDashboard"), icon: LayoutDashboard },
    { title: "Nova Carga", url: createPageUrl("NewFreight"), icon: Package },
    { title: "Minhas Cargas", url: createPageUrl("ManageFreights"), icon: MapPin },
  ];

  const driverNavItems = [
    { title: "Dashboard", url: createPageUrl("DriverDashboard"), icon: LayoutDashboard },
    { title: "Fretes Disponíveis", url: createPageUrl("AvailableFreights"), icon: Package },
    { title: "Meus Fretes", url: createPageUrl("MyFreights"), icon: Truck },
  ];

  const navItems = user?.user_type === "company" ? companyNavItems : 
                   user?.user_type === "driver" ? driverNavItems : [];

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
      <style>{`
        :root {
          --primary-50: #eff6ff;
          --primary-100: #dbeafe;
          --primary-500: #3b82f6;
          --primary-600: #2563eb;
          --primary-700: #1d4ed8;
          --slate-50: #f8fafc;
          --slate-800: #1e293b;
          --slate-900: #0f172a;
        }
      `}</style>

      {/* Header */}
      <header className={`fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${
        scrolled ? 'bg-white/95 backdrop-blur-lg shadow-lg' : 'bg-white/80 backdrop-blur-md'
      }`}>
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center h-16">
            {/* Logo */}
            <Link to={createPageUrl("Home")} className="flex items-center gap-3 group">
              <div className="relative">
                <div className="absolute inset-0 bg-blue-500 rounded-xl blur-md opacity-50 group-hover:opacity-75 transition-opacity" />
                <div className="relative bg-gradient-to-br from-blue-600 to-blue-700 p-2 rounded-xl">
                  <Truck className="w-6 h-6 text-white" />
                </div>
              </div>
              <div>
                <h1 className="text-xl font-bold text-slate-900">FreteMax</h1>
                <p className="text-xs text-slate-500">Gestão Inteligente</p>
              </div>
            </Link>

            {/* Desktop Navigation */}
            {user && !isHomePage && (
              <nav className="hidden md:flex items-center gap-2">
                {navItems.map((item) => (
                  <Link
                    key={item.title}
                    to={item.url}
                    className={`flex items-center gap-2 px-4 py-2 rounded-lg transition-all ${
                      location.pathname === item.url
                        ? 'bg-blue-500 text-white shadow-lg shadow-blue-500/30'
                        : 'text-slate-700 hover:bg-slate-100'
                    }`}
                  >
                    <item.icon className="w-4 h-4" />
                    <span className="font-medium">{item.title}</span>
                  </Link>
                ))}
              </nav>
            )}

            {/* User Menu */}
            <div className="flex items-center gap-3">
              {user ? (
                <DropdownMenu>
                  <DropdownMenuTrigger asChild>
                    <Button variant="outline" className="flex items-center gap-2">
                      {user.user_type === "company" ? (
                        <Building2 className="w-4 h-4" />
                      ) : (
                        <Truck className="w-4 h-4" />
                      )}
                      <span className="hidden sm:inline">{user.full_name || user.email}</span>
                      <User className="w-4 h-4" />
                    </Button>
                  </DropdownMenuTrigger>
                  <DropdownMenuContent align="end" className="w-56">
                    <div className="px-2 py-1.5 text-sm">
                      <p className="font-medium">{user.full_name}</p>
                      <p className="text-xs text-slate-500">{user.email}</p>
                      <p className="text-xs text-blue-600 mt-1">
                        {user.user_type === "company" ? "Empresa" : "Motorista"}
                      </p>
                    </div>
                    <DropdownMenuSeparator />
                    <DropdownMenuItem 
                      onClick={handleSwitchProfile}
                      disabled={switchingProfile}
                      className="cursor-pointer"
                    >
                      <RefreshCw className={`w-4 h-4 mr-2 ${switchingProfile ? 'animate-spin' : ''}`} />
                      {switchingProfile 
                        ? "Alternando..." 
                        : `Alternar para ${user.user_type === "company" ? "Motorista" : "Empresa"}`}
                    </DropdownMenuItem>
                    <DropdownMenuSeparator />
                    <DropdownMenuItem onClick={handleLogout} className="text-red-600 cursor-pointer">
                      <LogOut className="w-4 h-4 mr-2" />
                      Sair
                    </DropdownMenuItem>
                  </DropdownMenuContent>
                </DropdownMenu>
              ) : (
                <div className="flex items-center gap-2">
                  <Button 
                    variant="outline" 
                    onClick={() => base44.auth.redirectToLogin(createPageUrl("Home"))}
                  >
                    Entrar
                  </Button>
                </div>
              )}

              {/* Mobile Menu Button */}
              {user && !isHomePage && (
                <Button
                  variant="ghost"
                  size="icon"
                  className="md:hidden"
                  onClick={() => setMobileMenuOpen(!mobileMenuOpen)}
                >
                  {mobileMenuOpen ? <X className="w-5 h-5" /> : <Menu className="w-5 h-5" />}
                </Button>
              )}
            </div>
          </div>

          {/* Mobile Navigation */}
          {user && !isHomePage && mobileMenuOpen && (
            <nav className="md:hidden py-4 space-y-2 border-t">
              {navItems.map((item) => (
                <Link
                  key={item.title}
                  to={item.url}
                  onClick={() => setMobileMenuOpen(false)}
                  className={`flex items-center gap-3 px-4 py-3 rounded-lg transition-all ${
                    location.pathname === item.url
                      ? 'bg-blue-500 text-white'
                      : 'text-slate-700 hover:bg-slate-100'
                  }`}
                >
                  <item.icon className="w-5 h-5" />
                  <span className="font-medium">{item.title}</span>
                </Link>
              ))}
            </nav>
          )}
        </div>
      </header>

      {/* Main Content */}
      <main className="pt-16">
        {children}
      </main>

      {/* Footer */}
      <footer className="bg-slate-900 text-white mt-20">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div className="flex items-center gap-2 mb-4">
                <Truck className="w-6 h-6 text-blue-400" />
                <h3 className="text-lg font-bold">FreteMax</h3>
              </div>
              <p className="text-slate-400 text-sm">
                Conectando empresas e motoristas para uma logística mais eficiente.
              </p>
            </div>
            <div>
              <h4 className="font-semibold mb-3">Contato</h4>
              <p className="text-slate-400 text-sm">contato@fretemax.com.br</p>
              <p className="text-slate-400 text-sm">(11) 98765-4321</p>
            </div>
            <div>
              <h4 className="font-semibold mb-3">Sobre</h4>
              <p className="text-slate-400 text-sm">
                Sistema completo de gestão de fretes para empresas e motoristas profissionais.
              </p>
            </div>
          </div>
          <div className="border-t border-slate-800 mt-8 pt-8 text-center text-slate-400 text-sm">
            © 2025 FreteMax. Todos os direitos reservados.
          </div>
        </div>
      </footer>
    </div>
  );
}
