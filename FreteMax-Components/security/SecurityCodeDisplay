import React, { useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Shield, Copy, Eye, EyeOff, CheckCircle2 } from "lucide-react";
import { toast } from "sonner";

export default function SecurityCodeDisplay({ freight, onGenerate, isGenerating }) {
  const [showCode, setShowCode] = useState(false);

  const copyToClipboard = () => {
    navigator.clipboard.writeText(freight.security_code);
    toast.success("Código copiado!");
  };

  if (!freight.security_code) {
    return (
      <Card className="border-2 border-blue-200 bg-gradient-to-br from-blue-50 to-white">
        <CardContent className="p-6">
          <div className="flex items-start gap-4">
            <div className="p-3 bg-blue-100 rounded-xl">
              <Shield className="w-6 h-6 text-blue-600" />
            </div>
            <div className="flex-1">
              <h3 className="font-semibold text-slate-900 mb-2">
                Código de Segurança
              </h3>
              <p className="text-sm text-slate-600 mb-4">
                Gere um código de segurança para esta entrega. O motorista precisará 
                confirmar este código ao finalizar a entrega.
              </p>
              <Button
                onClick={onGenerate}
                disabled={isGenerating}
                className="bg-blue-600 hover:bg-blue-700 gap-2"
              >
                {isGenerating ? (
                  <>
                    <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white" />
                    Gerando...
                  </>
                ) : (
                  <>
                    <Shield className="w-4 h-4" />
                    Gerar Código de Segurança
                  </>
                )}
              </Button>
            </div>
          </div>
        </CardContent>
      </Card>
    );
  }

  return (
    <Card className={`border-2 ${
      freight.security_code_verified 
        ? 'border-green-200 bg-gradient-to-br from-green-50 to-white' 
        : 'border-blue-200 bg-gradient-to-br from-blue-50 to-white'
    }`}>
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-lg">
          {freight.security_code_verified ? (
            <>
              <CheckCircle2 className="w-5 h-5 text-green-600" />
              <span>Código Verificado</span>
            </>
          ) : (
            <>
              <Shield className="w-5 h-5 text-blue-600" />
              <span>Código de Segurança Ativo</span>
            </>
          )}
        </CardTitle>
      </CardHeader>
      <CardContent className="space-y-4">
        <div className="p-4 bg-white rounded-xl border-2 border-dashed border-slate-300">
          <p className="text-xs text-slate-500 mb-2">Código para confirmação:</p>
          <div className="flex items-center gap-3">
            <div className="flex-1 text-center">
              {showCode ? (
                <span className="text-3xl font-mono font-bold tracking-wider text-slate-900">
                  {freight.security_code}
                </span>
              ) : (
                <span className="text-3xl font-mono font-bold tracking-wider text-slate-400">
                  ••••••
                </span>
              )}
            </div>
            <div className="flex gap-2">
              <Button
                variant="outline"
                size="icon"
                onClick={() => setShowCode(!showCode)}
                className="h-10 w-10"
              >
                {showCode ? (
                  <EyeOff className="w-4 h-4" />
                ) : (
                  <Eye className="w-4 h-4" />
                )}
              </Button>
              <Button
                variant="outline"
                size="icon"
                onClick={copyToClipboard}
                className="h-10 w-10"
              >
                <Copy className="w-4 h-4" />
              </Button>
            </div>
          </div>
        </div>

        {freight.security_code_verified ? (
          <div className="p-3 bg-green-50 border border-green-200 rounded-lg">
            <div className="flex items-start gap-2">
              <CheckCircle2 className="w-4 h-4 text-green-600 mt-0.5 flex-shrink-0" />
              <div className="text-xs text-green-900">
                <p className="font-semibold">Código confirmado com sucesso!</p>
                <p>O motorista verificou o código no local de entrega.</p>
              </div>
            </div>
          </div>
        ) : (
          <div className="p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <div className="flex items-start gap-2">
              <Shield className="w-4 h-4 text-blue-600 mt-0.5 flex-shrink-0" />
              <div className="text-xs text-blue-900">
                <p className="font-semibold">Como funciona?</p>
                <ul className="list-disc list-inside mt-1 space-y-1">
                  <li>Compartilhe este código com o responsável no local de entrega</li>
                  <li>O motorista solicitará o código ao finalizar a entrega</li>
                  <li>A entrega só será confirmada após a verificação do código</li>
                </ul>
              </div>
            </div>
          </div>
        )}
      </CardContent>
    </Card>
  );
}
