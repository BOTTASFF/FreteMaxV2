import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Package, ArrowLeft, Save } from "lucide-react";
import { toast } from "sonner";

export default function NewFreight() {
  const navigate = useNavigate();
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(false);
  const [formData, setFormData] = useState({
    cargo_name: "",
    description: "",
    pickup_location: "",
    delivery_location: "",
    freight_value: "",
    pickup_deadline: "",
    weight: "",
    dimensions: ""
  });

  useEffect(() => {
    const loadUser = async () => {
      const userData = await base44.auth.me();
      setUser(userData);
    };
    loadUser();
  }, []);

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);

    try {
      await base44.entities.Freight.create({
        ...formData,
        freight_value: parseFloat(formData.freight_value),
        weight: formData.weight ? parseFloat(formData.weight) : null,
        status: "available",
        company_id: user.id,
        company_name: user.company_name || user.full_name
      });

      toast.success("Carga cadastrada com sucesso!");
      navigate(createPageUrl("ManageFreights"));
    } catch (error) {
      toast.error("Erro ao cadastrar carga");
      console.error(error);
    }
    setLoading(false);
  };

  const handleChange = (field, value) => {
    setFormData(prev => ({ ...prev, [field]: value }));
  };

  if (!user) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600" />
      </div>
    );
  }

  return (
    <div className="min-h-screen py-8 px-4 sm:px-6 lg:px-8">
      <div className="max-w-3xl mx-auto">
        <div className="mb-6">
          <Button
            variant="ghost"
            onClick={() => navigate(createPageUrl("CompanyDashboard"))}
            className="gap-2"
          >
            <ArrowLeft className="w-4 h-4" />
            Voltar ao Dashboard
          </Button>
        </div>

        <Card className="shadow-xl border-0">
          <CardHeader className="bg-gradient-to-br from-blue-50 to-white border-b">
            <div className="flex items-center gap-3">
              <div className="p-3 bg-blue-600 rounded-xl">
                <Package className="w-6 h-6 text-white" />
              </div>
              <div>
                <CardTitle className="text-2xl">Cadastrar Nova Carga</CardTitle>
                <p className="text-sm text-slate-600 mt-1">Preencha os dados da carga para publicar</p>
              </div>
            </div>
          </CardHeader>

          <CardContent className="pt-6">
            <form onSubmit={handleSubmit} className="space-y-6">
              {/* Nome da Carga */}
              <div>
                <Label htmlFor="cargo_name">Nome da Carga *</Label>
                <Input
                  id="cargo_name"
                  required
                  placeholder="Ex: Eletrônicos, Alimentos, Materiais de construção..."
                  value={formData.cargo_name}
                  onChange={(e) => handleChange('cargo_name', e.target.value)}
                  className="mt-1"
                />
              </div>

              {/* Descrição */}
              <div>
                <Label htmlFor="description">Descrição</Label>
                <Textarea
                  id="description"
                  placeholder="Descreva a carga, cuidados especiais, observações..."
                  value={formData.description}
                  onChange={(e) => handleChange('description', e.target.value)}
                  className="mt-1 min-h-[100px]"
                />
              </div>

              {/* Locais */}
              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <Label htmlFor="pickup_location">Local de Retirada *</Label>
                  <Input
                    id="pickup_location"
                    required
                    placeholder="Cidade - Estado"
                    value={formData.pickup_location}
                    onChange={(e) => handleChange('pickup_location', e.target.value)}
                    className="mt-1"
                  />
                </div>
                <div>
                  <Label htmlFor="delivery_location">Local de Entrega *</Label>
                  <Input
                    id="delivery_location"
                    required
                    placeholder="Cidade - Estado"
                    value={formData.delivery_location}
                    onChange={(e) => handleChange('delivery_location', e.target.value)}
                    className="mt-1"
                  />
                </div>
              </div>

              {/* Valor e Data */}
              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <Label htmlFor="freight_value">Valor do Frete (R$) *</Label>
                  <Input
                    id="freight_value"
                    type="number"
                    step="0.01"
                    required
                    placeholder="0.00"
                    value={formData.freight_value}
                    onChange={(e) => handleChange('freight_value', e.target.value)}
                    className="mt-1"
                  />
                </div>
                <div>
                  <Label htmlFor="pickup_deadline">Data Limite para Coleta *</Label>
                  <Input
                    id="pickup_deadline"
                    type="date"
                    required
                    value={formData.pickup_deadline}
                    onChange={(e) => handleChange('pickup_deadline', e.target.value)}
                    className="mt-1"
                  />
                </div>
              </div>

              {/* Peso e Dimensões */}
              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <Label htmlFor="weight">Peso (kg)</Label>
                  <Input
                    id="weight"
                    type="number"
                    step="0.01"
                    placeholder="Ex: 1500"
                    value={formData.weight}
                    onChange={(e) => handleChange('weight', e.target.value)}
                    className="mt-1"
                  />
                </div>
                <div>
                  <Label htmlFor="dimensions">Dimensões (LxAxP)</Label>
                  <Input
                    id="dimensions"
                    placeholder="Ex: 2m x 1.5m x 1m"
                    value={formData.dimensions}
                    onChange={(e) => handleChange('dimensions', e.target.value)}
                    className="mt-1"
                  />
                </div>
              </div>

              {/* Botões */}
              <div className="flex gap-3 pt-6 border-t">
                <Button
                  type="button"
                  variant="outline"
                  onClick={() => navigate(createPageUrl("CompanyDashboard"))}
                  className="flex-1"
                >
                  Cancelar
                </Button>
                <Button
                  type="submit"
                  disabled={loading}
                  className="flex-1 bg-blue-600 hover:bg-blue-700 gap-2"
                >
                  {loading ? (
                    <>
                      <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white" />
                      Salvando...
                    </>
                  ) : (
                    <>
                      <Save className="w-4 h-4" />
                      Cadastrar Carga
                    </>
                  )}
                </Button>
              </div>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
